# #:import keyword module_name -> to import Python module if you want to use it in here
#: import my_random random
# everything to the right of the colon is pure python

<ScatterTextWidget>:
    orientation: 'vertical'
    TextInput:
        id: my_textinput
        font_size: 150
        size_hint_y: None
        height: 200
        text: 'default'
        on_text: root.change_label_colour()# event called whenever the text changes
        # can also simply pass the list comprehension here: mmy_label.color = [my_random.random() for i in range(3)] + [1]
    FloatLayout:
        Scatter: 
            Label:
                id: my_label
                text: my_textinput.text + str(my_textinput.font_size) # binding by referencing id from TextInput
                font_size: 150
    